<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table panel table-striped">
  <thead>
    <tr>
      <th>Recipe Count</th>
      <th>Name</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.recipes.count %></td>
        <td><%= user.name %></td>
        <td><%= user.bio %></td>
        <td><%= link_to 'Show', user , class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_user_path(user) , class: "btn btn-default btn-sm"%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'New User', new_user_path , class: "btn btn-primary" %>
  </div>
</div>

