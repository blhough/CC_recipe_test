<h3>Recipes</h3>
<table class="table panel table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Ingredient Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% user.recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.ingredients.count %></td>
        <td><%= link_to 'Show', recipe, class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>