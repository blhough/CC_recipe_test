<% title "Cookbooks" %>

<p id="notice"><%= notice %></p>

<h1>Listing Cookbooks</h1>

<div class="table-responsive">
<table class="table table-striped panel">
  <thead>
    <tr>
      <th>ID</th>
      <th>Chapter Count</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cookbooks.each do |cookbook| %>
      <tr>
        <td><%= cookbook.id %></td>
        <td><%= cookbook.chapters.count %></td>
        <td><%= cookbook.title %></td>
        <td><%= cookbook.subtitle %></td>
        <td><%= link_to 'Show', cookbook , class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_cookbook_path(cookbook) , class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', cookbook, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


<div class="row">
  <div class="col-xs-12">
    <%= link_to 'New Cookbook', new_cookbook_path , class: "btn btn-primary" %>
  </div>
</div>