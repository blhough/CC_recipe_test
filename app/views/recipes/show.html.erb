<% if notice %>
<div class="row">
  <div class="columns">
    <div data-alert class="alert-box success radius" style="margin-top:10px">
      <%= notice %>
      <a href="#" class="close">&times;</a>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="columns">
    <h1><%= @recipe.name %></h1>
  </div>
</div>

<div class="row">
  <div class="columns panel">
    <h4>Description</h4>
    <p><%= @recipe.description %></p>

  </div>
</div>

<div class="row">
  <div class="columns panel">
    <h4>Ingredients</h4>
    <ul >
      <% @recipe.ingredients.each do |ingredient| %>

        <li><%= ingredient.amount %> <%= ingredient.unit.pluralize(ingredient.amount.to_f) %> <%= ingredient.name %></li>

      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="columns">
    <%= link_to 'Edit', edit_recipe_path(@recipe) , class: "round button tiny" %>
    <%= link_to 'Back', recipes_path , class: "round button tiny" %>
  </div>
</div>





