<% if notice %>
<div class="row">
  <div class="columns">
    <div data-alert class="alert-box success radius">
      <%= notice %>
      <a href="#" class="close">&times;</a>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="columns">
    <h1>Recipe</h1>
  </div>
</div>

<div class="row">
  <div class="columns">
    <h4>
      <strong>Name:</strong>
      <%= @recipe.name %>
    </h4>

    <h4>
      <strong>Description:</strong>
      <%= @recipe.description %>
    </h4>
  </div>
</div>

<div class="row">
  <div class="columns">
  <br>
    <h4>Ingredients</h4>
    <ul>
      <% @recipe.ingredients.each do |ingredient| %>

        <li><%= ingredient.amount %> <%= ingredient.unit.pluralize(ingredient.amount.to_f) %> <%= ingredient.name %></li>

      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="columns">
    <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
    <%= link_to 'Back', recipes_path %>
  </div>
</div>





