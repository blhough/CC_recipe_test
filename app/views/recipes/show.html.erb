<p id="notice"><%= notice %></p>

<div class="row">
  <div class="columns">

    <h3>Name:</h3>
    <p>
      <%= @recipe.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @recipe.description %>
    </p>
  </div>
</div>

<div class="row">
  <div class="columns">
    <% @recipe.ingredients.each do |ingredient| %>
      <p>
      <strong>Name:</strong>
      <%= ingredient.name %>

      <strong>Amount:</strong>
      <%= ingredient.amount %>

      <strong>Unit:</strong>
      <%= ingredient.unit %>
    </p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="columns">
    <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
    <%= link_to 'Back', recipes_path %>
  </div>
</div>





