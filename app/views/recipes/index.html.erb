<p id="notice"><%= notice %></p>

<div class="row">
  <div class="columns">
    <h1>All Recipes</h1>
  </div>
</div>

<div class="row">
  <div class="columns">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.name %></td>
          <td><%= recipe.description %></td>
          <td><%= link_to 'Show', recipe, class: "btn btn-default btn-small" %></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-default btn-small" %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-small" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>

<div class="row">
  <div class="columns">
    <%= link_to 'New Recipe', new_recipe_path  , class: "btn btn-primary"%>
  </div>
</div>

